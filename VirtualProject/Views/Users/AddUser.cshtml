@model VirtualProject.Models.Identity.UsersContr.AddUserVM
@{
    ViewBag.Title = "Add User";
}

<h1>AddUser</h1>


<form method="post">
    <div asp-validation-summary="All" class="text-danger"> </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <input type="text" class="form-control form-control-user" asp-for="FirstName" placeholder="First Name">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <input type="text" class="form-control form-control-user" asp-for="LastName" placeholder="Last Name">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="email" class="form-control form-control-user" asp-for="Email" placeholder="Email Address">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br /><br />
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">

            <input type="password" asp-for="Passwrod" class="form-control form-control-user" placeholder="Password">
            <span asp-validation-for="Passwrod" class="text-danger"> </span>

        </div>
        @*  <div class="col-sm-6">
        <label asp-for="ConfirmPassword">ConfirmPassword</label>
        <input type="password" asp-for="ConfirmPassword" class="form-control form-control-user" placeholder="Repeat Password">
        <span asp-validation-for="ConfirmPassword" class="text-danger"> </span>
        </div>*@
    </div>

    <div class="card-body">
       
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model.Roles[i].RoleName" />

                <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model.Roles[i].IsSelected" class="form-check-label">
                    @Model.Roles[i].RoleName
                </label>

            </div>

        }
      
    </div>


    <div class="card-footer">
        <button type="submit" class="btn btn-primary">
            Add
        </button>
        <a asp-action="ShowUsers" class="btn btn-primary">Cancel</a>
    </div>


</form>

