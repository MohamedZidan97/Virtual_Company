@model UserRolesVM
@{
    ViewBag.Title = "ManagerRoles";

}

<h1>ManagerRoles</h1>




<form asp-controller="Users" asp-action="ManagerRoles" method="post">
    <div class="input-group mb-5">

        <div class="card mt-4">
            <h4>@Model.UserName</h4>
            Add/Remove Role
        </div>

        <div class="card-body">
            <input type="hidden" asp-for="UserId" />
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check m-1">
                   <input type="hidden" asp-for="@Model.Roles[i].RoleName"/>

                    <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model.Roles[i].IsSelected" class="form-check-label">
                        @Model.Roles[i].RoleName
                    </label>

                </div>
               
            }
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="ShowUsers" class="btn btn-primary">Cancel</a>
            </div>
        </div>

    </div>

</form>

