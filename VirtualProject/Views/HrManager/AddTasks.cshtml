@model VirtualProject.Models.Hr.AddTasksVM
@{
    ViewBag.Title = "Add Tasks";

}

<h1>AddTasks</h1>

<form asp-controller="HrManager" asp-action="AddTasks" method="post" enctype="multipart/form-data">


    <div class="form-group">
        <h4>@Model.Email</h4>
    </div>
    <br /><br />
    <div class="col-lg-6">
        <div class="p-5">
            <input type="hidden" asp-for="HrId" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label asp-for="Name">Title Task</label>
                <input type="text" class="form-control form-control-user" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"> </span>
            </div>
            <br /><br />
            <div class="form-group">
                <label asp-for="Description">Description Task</label>
                <input type="text" asp-for="Description" class="form-control form-control-user">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br /><br />
            <div >
                <label asp-for="CvUrl">Upload CV</label>
                <input type="file" asp-for="CvUrl" />
                <span asp-validation-for="CvUrl" class="text-danger"></span>
            </div>
            <br /><br />

            <input type="submit" value="Add Task" class="btn btn-primary"/>
        </div>
    </div>

</form>
